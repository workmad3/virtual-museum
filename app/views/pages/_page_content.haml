.std-width

  .page-title
    = page.title

  .bold
    lock version is #{page.lock_version}
    %br/
    page type is #{page.page_type}

  .content-content
    = page.content_as_html(page)

  .content-footer.parent-div
    .content-t-and-c.float-left
      .bold
        Tags
      = page.tags_as_html.html_safe
      %br
      .bold
        Categories
      = page.categories_as_html.html_safe
    .content-edit-button.float-right
      - if current_user
        = link_to("Edit page", "/pages/#{params[:id]}/edit", class: "btn btn-primary")
        = # %br
        = # link_to("Add resource", "/resources/new", class: "btn btn-primary")
  .clear

  - if page.has_category? ('UMCS Collection')
    .content-footer.parent-div

      .float-left
        %span.bold
          Item number
        \:
        = page.item_number
      .float-right
        %span.bold
          Location
        \:
        =  page.location
  .clear

.std-width
  #comments-padding
    = render partial: 'comments/comments_page_tab'